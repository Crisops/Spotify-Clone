---
  import Time from "@/icons/Time.astro";
  import { type Song } from "@/lib/data";

  interface Props {
    songs: Song[]
  }

  const {songs} = Astro.props


---


<table class="table-auto text-left min-w-full">
  <thead>
    <tr class="text-gray-300/50 text-sm font-light border-b-[1px] border-gray-500/50">
      <th class="px-4 py-2">#</th>
      <th class="px-4 py-2">Título</th>
      <th class="px-4 py-2">Álbum</th>
      <th class="px-4 py-2"><Time/></th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-[16px]"></tr>
    {
      songs.map((song, index) => (
        <tr class="border-spacing-0 text-gray-300/50 text-sm transition duration-300 overflow-hidden hover:bg-black/50">
          <td class="px-4 py-2 w-8 rounded-tl-md rounded-bl-md">{index + 1}</td>
          <td class="px-4 py-2">
            <div class="flex items-center gap-2">
              <picture class="w-10 h-10 flex-none">
                <img 
                src={song.image} 
                alt={song.title}/>  
              </picture>
              <div class="flex flex-auto flex-col truncate">
                <h4 class="font-normal text-sm">{song.title}</h4>
                <span class="text-xs text-gray-400">{song.artists.join(", ")}</span>
              </div>
            </div>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="px-4 py-2 rounded-tr-md rounded-br-md">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
