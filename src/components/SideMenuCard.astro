---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist
}

const {playlist} = Astro.props

const { id, cover, title, artists, color } = playlist

const artistString = artists.join(", ")


---


<a href={`/playlist/${id}`} class="playlist-item flex relative p-2 overflow-hidden items-center gap-4 rounded-md hover:bg-black/20">
  <picture class="w-10 h-10 flex-none">
    <img src={cover} alt={`Cover of ${title} by ${artistString}`} class="w-full h-full rounded-md object-cover">
  </picture>
  <div class="flex flex-auto flex-col truncate">
    <h4 class="font-normal text-sm">
      {title}
    </h4>
    <span class="text-xs text-gray-400">{artistString}</span>
  </div>
</a>